{
    "ts-node": {
      "files": true
    },
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "*": ["./node_modules/*", "*"]
      },
      "esModuleInterop": false,
      "lib": ["es5", "es6"],
      // "lib": ["ES2017"],
      // "target": "es5",
      "typeRoots": ["node_modules/@types","./typings"],
      "target": "ES2017",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "strict": true,
      "noImplicitAny": true
    }
  }